public class Token {
    final TipoToken tipo;
    final String lexema;
   

    public Token(TipoToken tipo, String lexema, int posicion){
        this.tipo=tipo;
        this.lexema=lexema;
        
    }

    public Token(TipoToken tipo, String lexema){
        this.tipo=tipo;
        this.lexema=lexema;
     
    }
 

    public enum TipoToken {
    IDENTIFICADOR,

    //PALABRAS RESERVADAS
    SELECT, FROM, DISTINCT,

    //CARACTERES
    COMA, PUNTO, ASTERISCO,

    //FINAL DE CADENA
    EOF
}
    
    public String toString(){
        return "<<"+tipo+" "+lexema+">>";
    }
}